import java.util.s;

public class SeriesSumCalculator 
{
    public static void main(String args[]) 
    {
        Scanner s = new Scanner(System.in);

        System.out.print("Enter the first term of the series: ");
        double firstTerm = s.nextDouble();

        System.out.print("Enter the common difference: ");
        double commonDifference = scanner.nextDouble();

        System.out.print("Enter the number of terms in the series: ");
        int numberOfTerms = scanner.nextInt();

        double sum = calculateSeriesSum(firstTerm, commonDifference, numberOfTerms);
        System.out.println("Sum of the series: " + sum);

       
    }

    public static double calculateSeriesSum(double firstTerm, double commonDifference, int numberOfTerms)
    {
        double sum = (numberOfTerms / 2.0) * (2 * firstTerm + (numberOfTerms - 1) * commonDifference);
        return sum;
    }
}
